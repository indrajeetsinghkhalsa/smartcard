<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardManually">

    <EditText
        android:id="@+id/cardName"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="89dp"
        android:ems="10"
        android:hint="Card Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/cardNo"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="89dp"
        android:ems="10"
        android:hint="CardNo"
        android:inputType="number" />

    <EditText
        android:id="@+id/cardHolderName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Card Holder name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/securityCode"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cvvNo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="93dp"
        android:ems="10"
        android:hint="Security Code"
        android:inputType="number" />

    <EditText
        android:id="@+id/pin"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvvNo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="97dp"
        android:ems="10"
        android:hint="PIN"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/expireDate"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="94dp"
        android:ems="10"
        android:hint="Expire Date"
        android:inputType="date" />

    <Button
        android:id="@+id/addCard"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expireDate"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="89dp"
        android:text="Add Card" />

    <EditText
        android:id="@+id/cvvNo"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardHolderName"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="CVV No"
        android:inputType="number" />

</RelativeLayout>