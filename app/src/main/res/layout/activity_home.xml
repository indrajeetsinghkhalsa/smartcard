<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="55dp"
        android:text="Welcome To E-Smart Card"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="119dp" />

    <Button
        android:id="@+id/showCardList"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="0dp"
        android:background="#11A1E3"
        android:fontFamily="sans-serif-medium"
        android:text="Show Present Cards"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <Button
        android:id="@+id/goToAddCard"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="0dp"
        android:background="#11A1E3"
        android:fontFamily="sans-serif-medium"
        android:text="Add Payment Card >"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />


</RelativeLayout>